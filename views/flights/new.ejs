<%- include('../partials/header') %>
<form id='new-form' action="/flights/new" method="POST">
<label for="airline">Airline:</label>
    <select name="airline">
        <option value="American">American</option>
        <option value="Southwest">Southwest</option>
        <option value="United">United</option>
    </select>
    <!-- number input for flight number -->
    <label for="flightNo">FLight Number (10-9999):</label>
    <input type="number" id="flightNo" name="flightNo" min="10" max="9999">
    <!-- dropdown for selecting an airport-->
    <label for="departs">Choose an airport:</label>
    <select name="airport">
        <option value="AUS">AUS</option>
        <option value="DAL">DAL</option>
        <option value="LAX">LAX</option>
        <option value="SEA">SEA</option>
    </select>
    <!-- timeselection calendar for choosing depart time -->
    <label for="departs">Choose a depart time:</label>
    <input id="departs" type="datetime-local" name="departs">
    <input type="submit" value="Add Flight">

</form>

<%- include('../partials/footer') %>